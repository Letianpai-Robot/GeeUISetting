<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <TextView
        android:id="@+id/wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65px"
        android:textColor="@color/white"
        android:textSize="24px"
        app:layout_constraintBottom_toTopOf="@id/change"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/change"
        android:layout_width="221px"
        android:layout_height="65px"
        android:layout_marginBottom="65px"
        android:background="@drawable/shape_btn_white"
        android:gravity="center"
        android:text="change"
        android:textColor="@color/white"
        android:textSize="24px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wifi">

        <ImageView
            android:layout_width="36px"
            android:layout_height="30px"
            android:layout_gravity="center"
            android:src="@drawable/icon_wifi_change" />

    </FrameLayout>

    <include
        layout="@layout/back_bottom"
        android:layout_width="0dp"
        android:layout_height="@dimen/back_parent_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>